<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ company_name }} — Cybersecurity & Penetration Testing</title>
  <meta name="description" content="{{ company_name }} — professional penetration testing, red team, security assessments, and managed detection." />
  <meta name="author" content="{{ company_name }}" />
  <style>
    :root{
      --bg:#081226; --card:#0e1a2b; --accent:#1fb6ff; --muted:#9fb0c8;
      --glass: rgba(255,255,255,0.03);
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    html {
      scroll-behavior: smooth;
    }
    html,body{height:100%;margin:0;background:linear-gradient(180deg,#061028 0%, #09172a 60%);}
    .wrap{min-height:100%;display:flex;flex-direction:column;align-items:center;padding:24px;}
    .card{width:100%;max-width:980px;background:linear-gradient(180deg,var(--card),rgba(8,18,34,0.7));border-radius:14px;padding:34px;box-shadow:0 8px 30px rgba(2,6,23,0.6);color:#e6f0fb;border:1px solid rgba(255,255,255,0.03);}
    
    header{
      display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;
      position: sticky; top: 0; z-index: 100; background: var(--card);
      padding: 12px 24px; border-bottom: 1px solid rgba(255,255,255,0.05);
    }
    nav a{color:var(--accent);text-decoration:none;margin-left:18px;font-weight:600;}
    nav a:hover{text-decoration:underline;}
    .logo{width:68px;height:68px;display:flex;align-items:center;justify-content:center;border-radius:10px;background:linear-gradient(135deg,var(--accent),#5be1ff);box-shadow:0 6px 18px rgba(31,182,255,0.12);flex:0 0 68px;margin-bottom:12px;}
    h1{font-size:24px;margin:0;}
    .tag{color:var(--muted);font-size:13px;margin-top:4px;}
    section{margin-top:32px; opacity:0; transform: translateY(20px); transition: all 0.8s ease;}
    section.visible{opacity:1; transform: translateY(0);}
    .section-title{font-size:20px;color:var(--accent);margin-bottom:12px;}
    .services{display:grid;grid-template-columns:repeat(2,1fr);gap:12px;margin-top:18px;}
    .svc{background:var(--glass);padding:12px;border-radius:10px;border:1px solid rgba(255,255,255,0.02);}
    .svc h3{margin:0 0 6px 0;font-size:14px;}
    .svc p{margin:0;color:var(--muted);font-size:13px;}
    .contact-card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01)); padding:18px;border-radius:10px;border:1px solid rgba(255,255,255,0.02);}
    .cta{display:flex;gap:8px;margin-top:12px;flex-wrap:wrap;}
    .btn{background:var(--accent);color:#042033;padding:10px 12px;border-radius:8px;text-decoration:none;font-weight:600;}
    .ghost{border:1px solid rgba(255,255,255,0.06);padding:10px 12px;border-radius:8px;color:var(--muted);text-decoration:none;}
    footer{margin-top:18px;color:var(--muted);font-size:13px;text-align:center;}
    
    @media (max-width:880px){
      .services{grid-template-columns:1fr;}
      nav a{margin-left:0;margin-right:12px;}
      header{flex-direction:column;align-items:flex-start;}
      .logo{margin-bottom:12px;}
    }
    .services .svc {
  background: var(--glass);
  padding: 12px;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.02);
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.6s ease;
}

.services .svc.visible {
  opacity: 1;
  transform: translateY(0);
}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div style="display:flex;align-items:center;gap:12px;">
        <div class="logo" aria-hidden="true">
          <svg width="36" height="36" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L4 5v6c0 5 3.8 9.7 8 11 4.2-1.3 8-6 8-11V5l-8-3z" fill="#00131b"/>
            <path d="M12 3.2L18 5v5.5c0 4.1-3.1 7.8-6 8.8-2.9-1-6-4.7-6-8.8V5l6-1.8z" fill="#ffffff" opacity="0.92"/>
          </svg>
        </div>
        <div>
          <h1>{{ company_name }}</h1>
          <div class="tag">{{ tagline }}</div>
        </div>
      </div>
      <nav>
        <a href="#about">About Us</a>
        <a href="#services">Services</a>
        <a href="#contact">Contact Us</a>
      </nav>
    </header>

    <main class="card" role="main">
      <section id="about">
        <div class="section-title">About Us</div>
        <p><strong>{{ company_name }}</strong> delivers pragmatic security testing and defensive engineering to help organisations find and fix real risks — before attackers do.</p>
      </section>

      <section id="services">
        <div class="section-title">Our Services</div>
        <div class="services" aria-label="Services">
          <div class="svc">
            <h3>External Penetration Test</h3>
            <p>Internet-facing attack surface testing: web apps, APIs, cloud perimeter and identity.</p>
          </div>
          <div class="svc">
            <h3>Internal Network Assessment</h3>
            <p>Simulated internal compromise and lateral movement testing for enterprise networks.</p>
          </div>
          <div class="svc">
            <h3>Red Team Exercises</h3>
            <p>Adversary emulation tailored to your industry, objectives and threat model.</p>
          </div>
          <div class="svc">
            <h3>Secure DevOps</h3>
            <p>CI/CD security, IaC reviews, SAST/DAST integration and pipeline hardening.</p>
          </div>
        </div>
      </section>

      <section id="contact">
        <div class="section-title">Contact Us</div>
        <div class="contact-card">
          <p style="color:var(--muted);margin-top:6px;">Schedule a discovery or request a quick health-check. We provide scoping, pricing transparency and a remediation plan with each engagement.</p>
          <div class="cta">
            <a class="btn" href="mailto:{{ contact_email }}?subject=Engagement%20Request">Contact Us</a>
            <a class="ghost" href="/.well-known/security.txt" rel="author">Responsible Disclosure</a>
          </div>
        </div>
      </section>
    </main>

    <footer>
      &copy; {{ company_name }} — All rights reserved
    </footer>
  </div>

  <script>
// Smooth scrolling fallback
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function(e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if(target){
      target.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });
});

// Fade-in on scroll for sections
const sections = document.querySelectorAll('section');
const sectionObserver = new IntersectionObserver(entries => {
  entries.forEach(entry => {
    if(entry.isIntersecting){
      entry.target.classList.add('visible');

      // Animate each .svc inside this section if present
      const svcs = entry.target.querySelectorAll('.svc');
      svcs.forEach((svc, index) => {
        setTimeout(() => {
          svc.classList.add('visible');
        }, index * 150); // 150ms stagger
      });
    }
  });
}, { threshold: 0.2 });

sections.forEach(section => sectionObserver.observe(section));
  </script>
</body>
</html>
